= form_with model: [@memo], html: {class: "Memo"}, local: true do |f|
  .Main-header
    .Title
      = f.text_field :title, class: "Title-form", placeholder: "title", maxlength: 45
  .Memo-field
    = f.text_area :body, class: "Memo-form", placeholder: "body", maxlength: 2000
    = button_tag type: "submit", class: "submit-btn" do
      = icon( 'fas', 'chevron-left' )
      save