= form_with model: [@memo], html: {class: "Memo"}, local: true do |f|
  .Main-header
    .Title
      = f.text_field :title, class: "Title-form", placeholder: "add title"
    .Edit-btn
      = icon( 'far', 'trash-alt' )
  .Memo-field
    = f.text_area :body, class: "Memo-form", placeholder: "put memo"

