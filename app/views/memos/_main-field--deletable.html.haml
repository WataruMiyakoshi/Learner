= form_with model: [@memo], html: {class: "Memo"}, local: true do |f|
  .Main-header
    .Title
      = f.text_field :title, class: "Title-form", placeholder: "add title"
    .Edit-btn
      .attention
        delete?
      = link_to icon( 'far', 'trash-alt' ), memo_path(@memo.id), method: :delete, class: "trash-icon"
      = link_to icon( 'fas', 'times' ), root_path, class: "times-icon"
  .Memo-field
    = f.text_area :body, class: "Memo-form", placeholder: "put memo"
