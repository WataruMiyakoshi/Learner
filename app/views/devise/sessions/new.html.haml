.User
  .User-field
    .User-field__menu
      Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "User-form" }) do |f|
      .field
        = icon( 'fas', 'envelope' )
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form"
      .field
        = icon( 'fas', 'key' )
        - f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "form"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "Log in", class: "btn"
    .end-link
      = render "devise/shared/links"
